// https://typedoc.org/guides/options/
{
    "$schema": "https://typedoc.org/schema.json",
    "entryPointStrategy": "packages",
    "entryPoints": [
        "./packages/core",
        "./packages/remirror-extension",
    ],
    "plugin": [
        "typedoc-plugin-markdown"
    ],
    "out": "docs",
    "githubPages": false,
    "disableSources": true,
    "externalSymbolLinkMappings": {
        "prosemirror-view": {
            "EditorView": "https://prosemirror.net/docs/ref/#view.EditorView"
        },
        "prosemirror-state": {
            "Command": "https://prosemirror.net/docs/ref/#state.Command"
        }
    },
    "readme": "none",
    "excludeExternals": true,
    "excludeInternal": true,
    "validation": true,
    "visibilityFilters": {
        "protected": false,
        "private": false,
        "inherited": false,
        "external": false,
        "@alpha": false,
        "@beta": false
    },
    // https://www.npmjs.com/package/typedoc-plugin-markdown
    "hideBreadcrumbs": true,
}
