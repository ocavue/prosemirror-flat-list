{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "composite": true
  },
  "include": [
    "./*.ts",
    "./*.jsx",
    "./*.mjs",
    "./pages",
    "./components"
  ],
  "exclude": [
    "node_modules"
  ]
}
