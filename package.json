{
  "name": "prosemirror-flat-list-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.29.0",
  "scripts": {
    "lint": "eslint .",
    "build": "nr -r --stream build",
    "dev": "nr -r --parallel dev",
    "api": "nr -r --stream build:tsc && typedoc",
    "test": "nr -r --stream test run",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile && nr build && nr api",
    "ci:publish": "pnpm publish -r --no-git-checks"
  },
  "devDependencies": {
    "@antfu/ni": "^0.20.0",
    "@changesets/cli": "^2.26.0",
    "@ocavue/eslint-config": "^0.4.7",
    "eslint": "^8.35.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "typedoc": "^0.23.26",
    "typedoc-plugin-external-package-links": "^0.1.0",
    "typedoc-plugin-markdown": "^3.14.0",
    "typedoc-plugin-mdn-links": "^2.0.2",
    "typescript": "^4.9.5"
  },
  "renovate": {
    "extends": [
      "github>ocavue/config-renovate"
    ]
  }
}
