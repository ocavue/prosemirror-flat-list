{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "paths": {
      "prosemirror-flat-list": ["./packages/core/src/index.ts"],
      "remirror-extension-flat-list": [
        "./packages/remirror-extension/src/index.ts"
      ]
    }
  }
}
