{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "temp",
    "paths": {
      "prosemirror-flat-list": ["./packages/core/src/index.ts"],
      "remirror-extension-flat-list": [
        "./packages/remirror-extension/src/index.ts"
      ]
    },
    "composite": true
  },
  "include": ["./*.js", "./*.ts"],
  "references": [
    {
      "path": "./packages/remirror-extension"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./examples/with-remirror"
    },
    {
      "path": "./examples/with-collapsable-ordered-list"
    },
    {
      "path": "./examples/with-prosemirror"
    },
    {
      "path": "./website/tsconfig.json"
    }
  ]
}
